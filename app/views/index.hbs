{{>infoBar}}
{{>nav modifier="c-nav--sticky"}}

<section id="hero" class="c-hero" role="banner" {{#if featured.image}}style="background-image:url({{featured.image}})"{{/if}}>
	<div class="c-hero__inner js-fade-hero-content">
		{{#if user}}
		<div class="c-edit">
			<a href="/article/edit/{{featured._id}}" class="c-edit__link c-edit__link--light">Edit</a>
			<a href="/article/{{featured._id}}" class="c-edit__link c-edit__link--delete c-edit__link--light">Delete</a>
		</div>
		{{/if}}
		<h1 class="c-hero__heading">{{featured.title}}</h1>
		<ul class="c-hero__meta">
			<li class="c-hero__meta-item">{{formatDate featured.date 'DD MMMM YYYY'}}</li>
			<li class="c-hero__meta-item">By {{featured.author.username}}</li>
			{{#if featured.tags}}
			<li class="c-hero__meta-item">{{featured.tags}}</li>
			{{/if}}
		</ul>
		<a href="article/{{featured.id}}" class="c-btn c-btn--secondary">Read article</a>
	</div>
	<a href="#posts" class="c-hero__arrow c-hero__arrow--active js-go-to-section js-fade-hero-content" role="button"><span class="lnr-chevron-down" aria-hidden="true"></span></a>
	<aside class="c-hero__overlay"></aside>
</section>

<div role="main">
	<section id="posts" class="c-teasers">
		<div class="o-width-limiter o-width-limiter--medium">
			<ul class="o-grid o-grid--airy">
				{{#each articles}}
				<li class="o-grid__col o-grid__col--2">
					{{#if ../user}}
					<div class="c-edit">
						<a href="/article/edit/{{_id}}" class="c-edit__link">Edit</a>
						<a href="/article/{{_id}}" class="c-edit__link c-edit__link--delete">Delete</a>
					</div>
					{{/if}}
					<div class="c-teaser">
						<a href="/article/{{_id}}" class="c-teaser__content-wrapper">
							<div class="c-teaser__media">
							{{#if image}}
								<img class="c-teaser__image" src="{{image}}" alt="">
							{{else}}
								<img class="c-teaser__image" src="../../img/abstract.jpg" alt="">
							{{/if}}
								<div class="c-teaser__overlay">
									<!-- <span class="c-teaser__icon lnr-eye" aria-hidden="true"></span> -->
								</div>
							</div>
							<div class="c-teaser__caption">
								<p class="c-teaser__date">{{formatDate date 'DD MMMM YYYY'}}</p>
								<h2 class="c-teaser__heading">{{title}}</h2>
								<p class="c-teaser__tag">{{tags}}</p>
							</div>
						</a>
					</div>
				</li>
				{{/each}}
			</ul>
		</div>
	</section>
</div>

{{#ifCond count limit}}
<ul class="c-pagination">
	{{{pagination pages page}}}
</ul>
{{/ifCond}}

{{>footer}}