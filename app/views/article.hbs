{{>nav}}

<section id="hero" class="c-hero c-hero--blog-post o-fixed-bg" role="banner" {{#if single.image}}style="background-image:url({{single.image}})"{{/if}}>
	<div class="c-hero__inner js-fade-hero-content">
		{{#if user}}
			<div class="c-edit">
				<a href="/article/edit/{{single.id}}" class="c-edit__link c-edit__link--light">Edit</a>
				<a href="/article/{{single.id}}" class="c-edit__link c-edit__link--delete c-edit__link--light">Delete</a>
			</div>
		{{/if}}
		<h1 class="c-hero__heading">{{single.title}}</h1>
		<span class="c-hero__subheading">
			<span class="c-hero__tag">{{formatDate single.date 'DD MMMM YYYY'}}</span>
			<span class="c-hero__tag">By {{single.author.username}}</span>
			{{#if single.tags}}<span class="c-hero__tag">{{single.tags}}</span>{{/if}}
		</span>
	</div>
	<a href="#article" class="c-hero__arrow c-hero__arrow--active js-go-to-section js-fade-hero-content"><span class="lnr-chevron-down" aria-hidden="true"></span></a>
	<aside class="c-hero__overlay"></aside>
</section>

<div role="main">
	<section id="article" class="c-section">
		<div class="o-width-limiter o-width-limiter--small">
			<article class="c-article s-text">
				{{{single.body}}}
			</article>
		</div>
	</section>
</div>

<div class="c-pagination">
	<a href="/" class="c-btn c-btn--light">More articles</a>
</div>

{{>footer}}